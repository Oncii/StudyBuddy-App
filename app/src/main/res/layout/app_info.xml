<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noInt_dialogContainer"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/forget_pass_popup"
    android:orientation="vertical">

    <TextView
        android:id="@+id/noInt_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/popup_title_bar"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="fill_vertical"
        android:paddingLeft="15dp"
        android:text="App Info"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/sb_logo_only" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="StudyBuddy AI"
        android:textAlignment="center"
        android:textColor="@color/azure"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/noInt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/app_version"
        android:textAlignment="center"
        android:textSize="15dp" />


    <Button
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/noInt_cancel"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/cancel_button"
        android:fontFamily="@font/ubuntu"
        android:text="Go back"
        android:textAllCaps="false"
        android:textColor="@color/azure"
        android:transitionName="login_log" />


</LinearLayout>