<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/forget_pass_popup"
    android:layout_gravity="center"
    android:id="@+id/logout_dialogContainer">

    <TextView
        android:id="@+id/logout_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Logout"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:gravity="fill_vertical"
        android:paddingLeft="15dp"
        android:background="@drawable/reset_title"/>

    <TextView
        android:id="@+id/logout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to log out?"
        android:textColor="#43B0F1"
        android:fontFamily="@font/ubuntu"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/logout_no"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/signup_button"
            android:text="No"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/logout_yes"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/cancel_button"
            android:textStyle="bold"
            android:text="Yes"
            android:textColor="#43B0F1"
            android:fontFamily="@font/ubuntu"/>
    </LinearLayout>

</LinearLayout>